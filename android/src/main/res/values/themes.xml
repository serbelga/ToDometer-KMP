<resources>

    <style name="Theme.ToDometer.Starting" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.ToDometer.NoActionBar</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splashscreen_launcher_foreground</item>
        <item name="windowSplashScreenBackground">@color/todometer_background</item>
    </style>

    <style name="Theme.ToDometer" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/todometer_primary</item>
        <item name="colorOnPrimary">@color/todometer_onPrimary</item>
        <item name="colorPrimaryContainer">@color/todometer_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/todometer_onPrimaryContainer</item>
        <item name="colorSecondary">@color/todometer_secondary</item>
        <item name="colorOnSecondary">@color/todometer_onSecondary</item>
        <item name="colorSecondaryContainer">@color/todometer_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/todometer_onSecondaryContainer</item>
        <item name="colorTertiary">@color/todometer_tertiary</item>
        <item name="colorOnTertiary">@color/todometer_onTertiary</item>
        <item name="colorTertiaryContainer">@color/todometer_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/todometer_onTertiaryContainer</item>
        <item name="colorError">@color/todometer_error</item>
        <item name="colorErrorContainer">@color/todometer_errorContainer</item>
        <item name="colorOnError">@color/todometer_onError</item>
        <item name="colorOnErrorContainer">@color/todometer_onErrorContainer</item>
        <item name="android:colorBackground">@color/todometer_background</item>
        <item name="colorOnBackground">@color/todometer_onBackground</item>
        <item name="colorSurface">@color/todometer_surface</item>
        <item name="colorOnSurface">@color/todometer_onSurface</item>
        <item name="colorSurfaceVariant">@color/todometer_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/todometer_onSurfaceVariant</item>
        <item name="colorOutline">@color/todometer_outline</item>
        <item name="colorOnSurfaceInverse">@color/todometer_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/todometer_inverseSurface</item>
        <item name="elevationOverlayColor">@color/todometer_surfaceTint</item>
        <item name="colorPrimaryInverse">@color/todometer_inversePrimary</item>

        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>

        <item name="textAppearanceDisplayLarge">@style/TextAppearance.ToDometer.Material3.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.ToDometer.Material3.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.ToDometer.Material3.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.ToDometer.Material3.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.ToDometer.Material3.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.ToDometer.Material3.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.ToDometer.Material3.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.ToDometer.Material3.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.ToDometer.Material3.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.ToDometer.Material3.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.ToDometer.Material3.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.ToDometer.Material3.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.ToDometer.Material3.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.ToDometer.Material3.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.ToDometer.Material3.LabelSmall</item>

        <item name="actionBarStyle">@style/ToDometer.ActionBar</item>
    </style>

    <style name="ToDometer.ActionBar" parent="Widget.Material3.ActionBar.Solid">
        <item name="titleTextStyle">@style/TextAppearance.ToDometer.Material3.TitleLarge</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Theme.ToDometer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
